<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	<xs:element name="ValueAlone">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:assertion test="$value"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
	<xs:element name="ValueCombined">
		<xs:simpleType>
			<xs:restriction base="xs:string">
				<xs:assertion test="$value eq 2"/>
			</xs:restriction>
		</xs:simpleType>
	</xs:element>
</xs:schema>




